{
  "name": "@anthropic-community/browser-coordinator-mcp",
  "version": "0.1.0",
  "description": "MCP server that coordinates browser lifecycle and proxies browser automation tools",
  "type": "module",
  "main": "dist/cli.js",
  "bin": {
    "browser-coordinator-mcp": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc && tsc -p tsconfig.extension.json",
    "build:mcp": "tsc",
    "build:extension": "tsc -p tsconfig.extension.json",
    "dev": "tsc --watch",
    "start": "node dist/cli.js",
    "prepare": "tsc && tsc -p tsconfig.extension.json"
  },
  "keywords": [
    "mcp",
    "browser",
    "automation",
    "playwright",
    "cdp"
  ],
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/vscode": "^1.109.0",
    "typescript": "^5.7.0"
  },
  "engines": {
    "node": ">=18"
  }
}

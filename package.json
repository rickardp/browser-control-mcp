{
  "name": "@rickardp/browser-coordinator-mcp",
  "version": "0.1.0",
  "description": "MCP server that manages browser lifecycle and provides a stable CDP proxy port for browser automation",
  "type": "module",
  "main": "dist/cli.js",
  "bin": {
    "@rickardp/browser-coordinator-mcp": "dist/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rickardp/browser-control-mcp.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "dist/**/*.js.map",
    "dist/**/*.d.ts.map"
  ],
  "scripts": {
    "build": "tsc && tsc -p tsconfig.extension.json",
    "build:mcp": "tsc",
    "build:extension": "tsc -p tsconfig.extension.json",
    "dev": "tsc --watch",
    "start": "node dist/cli.js",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "prepare": "tsc && tsc -p tsconfig.extension.json"
  },
  "keywords": [
    "mcp",
    "browser",
    "automation",
    "playwright",
    "cdp"
  ],
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/vscode": "^1.109.0",
    "typescript": "^5.7.0"
  },
  "engines": {
    "node": ">=18"
  }
}
